<p id="notice"><%= notice %></p>

<!-- Page Content -->
<div class="container">
	<h2>Latest Logs Posted</h2>

	<div class="row">
		<% @logs.each do |log| %>
			<div class="col-lg-3 col-sm-6">
				<div class="card h-100">
					<div class="log-list-card">
						<a href="">
							<img class="card-img-top" src="<%= log.img %>" />
						</a>
					</div>
					<div class="class-body">
						<h5 class=card-title>
							<%= log.location %>
						</h5>
							<p class="card-text-posted-by">
								<%= log.participant %>
							</p>
							<p><%= link_to 'Show', log %></p>
			        <p><%= link_to 'Edit', edit_log_path(log) %></td>
			        <p><%= link_to 'Destroy', log, method: :delete, data: { confirm: 'Are you sure?' } %></p>
					</div>
				</div>
			</div>
		<% end %>
	</div>

</div><!-- end of container -->

<%= link_to 'New Log', new_log_path %>